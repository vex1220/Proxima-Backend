generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int                   @id @default(autoincrement())
  createdAt               DateTime              @default(now())
  email                   String                @unique
  displayId               String
  karma                   Int                   @default(0)
  isAdmin                 Boolean               @default(false)
  password                String
  deleted                 Boolean               @default(false)
  isVerified              Boolean               @default(false)
  ChatRoomMessages        ChatRoomMessage[]
  ProximityMessages       ProximityMessage[]
  ChatRoomMessageVotes    ChatRoomMessageVote[]
  PostVotes               PostVote[]
  PostCommentMessageVotes PostCommentVote[]

  preferences      User_Settings?
  FeedbackMessages FeedbackMessage[]
  posts            Post[]
  postComments     PostComment[]
}

model User_Settings {
  id              Int   @id @default(autoincrement())
  userId          Int   @unique
  proximityRadius Int   @default(1600)
  user            User? @relation(fields: [userId], references: [id])
}

enum LocationType {
  NONE
  CAMPUS
  CITY
  PARTY
  EVENT
  GLOBAL
  BUILDING
}

model Location {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now())
  name      String
  deleted   Boolean      @default(false)
  latitude  Float?
  longitude Float?
  size      Int          @default(0)
  type      LocationType @default(NONE)
  chatRooms ChatRoom[]
  posts     Post[]

  @@index([latitude, longitude])
  @@index([type])
}

model Post {
  id         Int           @id @default(autoincrement())
  createdAt  DateTime      @default(now())
  title      String
  content    String
  imageUrl   String?
  posterId   Int
  locationId Int
  deleted    Boolean       @default(false)
  location   Location      @relation(fields: [locationId], references: [id], onDelete: Restrict)
  poster     User          @relation(fields: [posterId], references: [id])
  comments   PostComment[]
  votes      PostVote[]

  @@index(locationId)
}

model PostComment {
  id          Int               @id @default(autoincrement())
  createdAt   DateTime          @default(now())
  content     String
  imageUrl   String?
  postId      Int
  commenterId Int
  deleted     Boolean           @default(false)
  post        Post              @relation(fields: [postId], references: [id], onDelete: Cascade)
  commenter   User              @relation(fields: [commenterId], references: [id])
  votes       PostCommentVote[]

  @@index(postId)
}

model PostVote {
  id        Int      @id @default(autoincrement())
  userId    Int
  targetId  Int
  value     Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([userId, targetId])
}

model PostCommentVote {
  id        Int         @id @default(autoincrement())
  userId    Int
  targetId  Int
  value     Int
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      PostComment @relation(fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([userId, targetId])
}

model ChatRoom {
  id         Int               @id @default(autoincrement())
  createdAt  DateTime          @default(now())
  name       String
  deleted    Boolean           @default(false)
  locationId Int
  location   Location          @relation(fields: [locationId], references: [id], onDelete: Restrict)
  messages   ChatRoomMessage[]

  @@index([locationId])
}

model ChatRoomMessage {
  id         Int                   @id @default(autoincrement())
  createdAt  DateTime              @default(now())
  content    String
  imageUrl   String?
  chatRoomId Int
  senderId   Int
  isReply    Boolean               @default(false)
  replyToId  Int?
  deleted    Boolean               @default(false)
  chatRoom   ChatRoom              @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  sender     User                  @relation(fields: [senderId], references: [id])
  votes      ChatRoomMessageVote[]
}

model ChatRoomMessageVote {
  id        Int             @id @default(autoincrement())
  userId    Int
  targetId  Int
  value     Int
  createdAt DateTime        @default(now())
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  message   ChatRoomMessage @relation(fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([userId, targetId])
}

model ProximityMessage {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
  imageUrl   String?
  senderId  Int
  deleted   Boolean  @default(false)
  latitude  Float
  longitude Float
  sender    User     @relation(fields: [senderId], references: [id])
}

enum FeedbackCategory {
  OVERALL
  CHAT
  CHATROOM
  UI
  PERFORMANCE
  BUG
}

enum Platform {
  IOS
  ANDROID
  OTHER
}

model FeedbackMessage {
  id        Int              @id @default(autoincrement())
  userId    Int
  category  FeedbackCategory @default(OVERALL)
  platform  Platform?
  rating    Int?
  comment   String?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([category])
  @@index([userId])
}
